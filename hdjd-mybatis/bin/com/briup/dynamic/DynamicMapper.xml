		null"> AND NAME LIKE #{courseName} </if> <if test="startDate != null"> AND 
		START_DATE >= #{startDate} </if> <if test="endDate != null"> AND END_DATE 
		<![CDATA[ <= ]]> #{endDate} </if> </select> -->



	<!-- <select id="searchCourses" parameterType="map" resultMap="CourseResult"> 
		SELECT * FROM COURSES <choose> <when test="searchBy == 'Tutor'"> WHERE TUTOR_ID= 
		#{tutorId} </when> <when test="searchBy == 'CourseName'"> WHERE name like 
		#{courseName} </when> <otherwise> WHERE start_date >= sysdate </otherwise> 
		</choose> </select> -->


	<select id="searchCourses" parameterType="map" resultMap="CourseResult">
		SELECT * FROM COURSES
		<where>
			<if test="tutorId != null ">
				TUTOR_ID= #{tutorId}
			</if>
			<if test="courseName != null">
				AND name like #{courseName}
			</if>
			<if test="startDate != null">
				AND start_date >= #{startDate}
			</if>
			<if test="endDate != null">
				AND end_date <![CDATA[ <= ]]>
				#{endDate}
			</if>
		</where>
	</select>

	<select id="searchCoursesByTutors" parameterType="map"
		resultMap="CourseResult">
		SELECT * FROM COURSES
		<if test="tutorIds != null">
			<where>
				<!-- <foreach item="tutorId" collection="tutorIds"> OR tutor_id=#{tutorId} 
					</foreach> -->
				tutor_id IN
				<foreach item="tempValue" collection="tutorIds" open="("
					separator="," close=")">
					#{tempValue}
				</foreach>
			</where>
		</if>
	</select>
	
	<update id="updateStudent" parameterType="Student">
		update students
		<set>
			<if test="name != null">name=#{name},</if>
			<if test="email != null">email=#{email},</if>
			<if test="phone != null">phone=#{phone},</if>
		</set>
		where stud_id=#{studId}
	</update>
</mapper> 